<atlassian-plugin key="${atlassian.plugin.key}" name="${project.name}" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}" />
        <param name="plugin-icon">images/pluginIcon.png</param>
        <param name="plugin-logo">images/pluginLogo.png</param>
    </plugin-info>

    <!-- add our i18n resource -->
    <resource type="i18n" name="i18n" location="java-plugin-scriptrunner-webservice-soap-client-axis"/>
    
    <!-- add our web resources -->
    <web-resource key="java-plugin-scriptrunner-webservice-soap-client-axis-resources" name="java-plugin-scriptrunner-webservice-soap-client-axis Web Resources">
        <dependency>com.atlassian.auiplugin:ajs</dependency>
        
        <resource type="download" name="java-plugin-scriptrunner-webservice-soap-client-axis.css" location="/css/java-plugin-scriptrunner-webservice-soap-client-axis.css"/>
        <resource type="download" name="java-plugin-scriptrunner-webservice-soap-client-axis.js" location="/js/java-plugin-scriptrunner-webservice-soap-client-axis.js"/>
        <resource type="download" name="images/" location="/images"/>

        <context>java-plugin-scriptrunner-webservice-soap-client-axis</context>
    </web-resource>
    
</atlassian-plugin>